{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    ":configMigration",
    ":automergeMinor",
    ":skipStatusChecks",
    "group:allNonMajor",
    "schedule:monthly"
  ],
  "customManagers": [
    {
      "customType": "regex",
      "description": "Update versions.yaml dependencies",
      "managerFilePatterns": [
        "/^versions.yaml$/"
      ],
      "matchStrings": [
        "# renovate: packageName=(?<packageName>.+?)(?: datasource=(?<datasource>[a-z-]+?))?(?: versioning=(?<versioning>[a-z-]+?))?(?: extractVersion=(?<extractVersion>.+?))?\\n\\s+\\w+:\\s\"(?<currentValue>.+?)\"\\s"
      ],
      "datasourceTemplate": "{{#if datasource}}{{{datasource}}}{{else}}github-tags{{/if}}"
    }
  ]
}
